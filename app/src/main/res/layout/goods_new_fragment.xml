<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tx_wishPool" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tx_loveTo" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tx_changeStuff" />
    </android.support.design.widget.TabLayout>

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="211dp"
            android:onClick="onPickPictureClick"

            app:srcCompat="@mipmap/ic_launcher"
             />

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:id="@+id/sv_newgood"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物品名稱"
                    android:textSize="25dp"
                    android:paddingBottom="25dp"
                    />

                <EditText
                    android:id="@+id/et_goodsname"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:hint="請輸入名稱"
                    android:textSize="25dp"
                    android:layout_weight="0.31"
                    android:layout_marginLeft="50dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="25dp"
                    android:text="數量"
                    android:textSize="25dp" />
                <EditText
                    android:id="@+id/et_qty"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal"
                    android:hint="請輸入數量"
                    android:textSize="25dp"
                    android:layout_weight="0.23"
                    android:layout_marginLeft="100dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txgoodstate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="供需型態"
                    android:paddingBottom="25dp"
                    android:textSize="25dp"/>
                <Spinner
                    android:id="@+id/sp_state"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物資類別"
                    android:paddingBottom="25dp"
                    android:textSize="25dp" />

                <Spinner
                    android:id="@+id/sp_class"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="25dp"
                    android:text="商品地點"
                    android:textSize="25dp"
                    />

                <Spinner
                    android:id="@+id/sp_loc"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="25dp"
                    android:text="運送方式"
                    android:textSize="25dp"
                    />

                <Spinner
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:id="@+id/sp_dlvWay"
                    android:layout_marginLeft="50dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="25dp"
                    android:text="有效日期"
                    android:textSize="25dp" />
                <Button
                    android:id="@+id/bt_date"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="日期選擇"
                    android:layout_marginLeft="100dp"
                    android:layout_weight="0.05" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="詳細說明"
                    android:textSize="25dp"
                    android:paddingBottom="15dp"/>
                <EditText
                    android:id="@+id/et_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:hint="請輸入內容"
                    android:gravity="top|left"
                    android:lines="8"
                    android:minLines="3"
                    android:maxLines="10"
                    android:layout_marginLeft="50dp"
                    />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <Button
                        android:text="取消並返回"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/bt_BackGBList"
                        android:onClick="onBackgood"
                        android:layout_marginLeft="25dp"
                         />
                    <Button
                        android:text="新增物品"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onNewGoodsResult"
                        android:id="@+id/bt_NewGoodsResult"
                        android:layout_marginLeft="100dp"
                        />
                    </LinearLayout>


            </LinearLayout>

    </ScrollView>

</LinearLayout>

