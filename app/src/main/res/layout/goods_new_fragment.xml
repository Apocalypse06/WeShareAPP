<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ff9797"
    android:id="@+id/newback">


    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="211dp"
        android:onClick="onPickPictureClick"
        android:background="@drawable/edittext_goods"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/box_default" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sv_newgood"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物品名稱"
                    android:textSize="25dp"
                    android:padding="15dp"
                    android:background="#ff9797"


                    />

                <EditText
                    android:id="@+id/et_goodsname"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:hint="請輸入名稱"
                    android:textSize="20dp"
                    android:layout_weight="0.11"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/edittext_goods"
                    android:padding="5dp"
                    android:layout_marginBottom="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物資數量"
                    android:textSize="25dp"
                    android:padding="15dp"
                    android:background="#ff9797" />

                <EditText
                    android:id="@+id/et_qty"
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal"
                    android:hint="請輸入數量"
                    android:textSize="20dp"
                    android:layout_weight="0.11"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/edittext_goods"
                    android:padding="5dp"
                    android:layout_marginBottom="5dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txgoodstate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="供需型態"
                    android:padding="15dp"
                    android:background="#ff9797"
                    android:textSize="25dp" />

                <Spinner
                    android:id="@+id/sp_state"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="物資類別"

                    android:textSize="25dp"
                    android:padding="15dp"
                    android:background="#ff9797" />

                <Spinner
                    android:id="@+id/sp_class"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="25dp"
                    android:text="商品地點"
                    android:textSize="25dp"
                    android:padding="15dp"
                    android:background="#ff9797" />

                <Spinner
                    android:id="@+id/sp_loc"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="50dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="#ff9797"
                    android:text="運送方式"
                    android:textSize="25dp" />

                <Spinner
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:id="@+id/sp_dlvWay"
                    android:layout_marginLeft="50dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:background="#ff9797"
                    android:text="有效日期"
                    android:textSize="25dp" />

                <Button
                    android:id="@+id/bt_date"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="日期選擇"
                    android:layout_marginLeft="80dp"
                    android:layout_weight="0.05" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="詳細說明"
                    android:textSize="25dp"
                    android:padding="15dp"
                    android:background="#ff9797" />

                <EditText
                    android:id="@+id/et_comment"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:hint="請輸入內容"
                    android:gravity="top|left"
                    android:lines="8"
                    android:minLines="3"
                    android:maxLines="10"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/edittext_goods"
                    android:padding="5dp"
                    android:layout_marginBottom="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:layout_marginBottom="15dp">


                <Button
                    android:text="取消並返回"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/bt_BackGBList"
                    android:onClick="onBackgood"
                    android:layout_gravity="center" />

                <Button
                    android:text="新增物資"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onNewGoodsResult"
                    android:id="@+id/bt_NewGoodsResult"
                    android:layout_marginLeft="40dp"
                    android:layout_gravity="center" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>

