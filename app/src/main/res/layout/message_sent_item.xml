        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivUserOnePic"
            android:layout_width="30px"
            android:layout_height="30px"
            android:src="@drawable/member_default" />

        <!--<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"-->
        <!--android:layout_width="20dp"-->
        <!--android:layout_height="20dp"-->
        <!--android:layout_margin="10dp"-->
        <!--card_view:cardCornerRadius="5dp"-->
        <!--card_view:cardElevation="0dp">-->

        <!--<de.hdodenhof.circleimageview.CircleImageView-->
        <!--android:id="@+id/ivUserOnePic"-->
        <!--android:layout_width="30px"-->
        <!--android:layout_height="30px"-->
        <!--android:src="@drawable/member_default" />-->
        <!--</android.support.v7.widget.CardView>-->

        <LinearLayout
            android:id="@+id/llsend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_msg_send">
            <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:background="@drawable/edittext_msg">-->

            <TextView
                android:id="@+id/tvsendMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="12dp"
                android:layout_marginRight="100dp"
                android:layout_marginTop="10dp"
                android:textSize="15dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivYouImg"
            android:layout_width="200dp"
            android:layout_height="200dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical">

        <LinearLayout
            android:id="@+id/llget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/edittext_msg_me">

            <TextView
                android:id="@+id/tvgetMsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
