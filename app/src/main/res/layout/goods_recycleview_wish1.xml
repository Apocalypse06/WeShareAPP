<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gb_cardviewboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:padding="6dp"
    card_view:cardBackgroundColor="#ffdddddd"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp">

    <LinearLayout
        android:id="@+id/lnwish"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:background="#87CEFA"
        android:padding="6dp"
        android:weightSum="1">



        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="125dp"
            android:layout_height="match_parent"
            android:layout_weight="0.16"
            android:layout_marginRight="20dp"
            android:src="@drawable/house"
            android:background="@drawable/edittext_goods"
            android:padding="5dp"
            />


        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_weight="1">

            <TextView
                android:id="@+id/tv_goodsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="物品標題"
                android:layout_weight="1"
                android:textSize="22dp" />

                <LinearLayout
                    android:layout_width="32dp"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:id="@+id/icon_menu"
                        android:layout_width="32dp"
                        android:layout_height="29dp"
                        android:layout_marginRight="10dp"
                        android:layout_margin="5dp"
                        android:onClick="onGoodsIconMenu"
                        android:layout_gravity="right"
                        android:src="@drawable/menu_icon" />
                </LinearLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/tv_needNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_needTime"
                android:layout_alignStart="@+id/tv_needTime"
                android:layout_below="@+id/tv_needTime"
                android:layout_marginTop="10dp"
                android:text="需求數量："
                android:textSize="15dp"
                android:layout_weight="1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">
            <TextView
                android:id="@+id/tv_needTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_goodsClass"
                android:layout_alignStart="@+id/tv_goodsClass"
                android:layout_below="@+id/tv_goodsClass"
                android:layout_marginTop="10dp"
                android:text="需求期限："
                android:textSize="12dp"
                android:layout_weight="1"/>
                <ImageView
                    android:id="@+id/iv_isInst"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/org_house_default"
                    android:layout_gravity="right"
                    android:layout_weight="0.14"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>